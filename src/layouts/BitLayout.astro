---
import Base from "./Base.astro";
import { datum } from "../../utils/zeit.ts";
const { frontmatter, slug } = Astro.props;
---

<Base pageTitle={slug}>
  <div class="bit">
    <div class="bit-content">
      <p>
        <p><b>{slug}</b></p>
        <slot />
      </p>
    </div>
    <div class="bit-metadata">
      <span>{datum(frontmatter.pubDate)} </span> ~
      <span>{frontmatter.tags}</span>
    </div>
  </div>
</Base>
