---
import Footer from "../components/Footer.astro";
import "../styles/fonts.css";
import "../styles/global.css";
import "../styles/colors.css";
import Nav from "../components/Nav.astro";
const { pageTitle } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="me" href="https://mas.to/@ingenieur" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" sizes="32x32" href="/favicon.ico" />
    <link rel="alternate" type="application/rss+xml" title="kenan.fyi" href={new URL("rss.xml", Astro.site)} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="posting occasionally" />

    <title>{pageTitle}</title>
  </head>
  <body>
    <script src="https://swetrix.org/swetrix.js" defer></script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        swetrix.init("1FQBRBM970Ir", {
          apiURL: "https://swetrixapi.akinci.fyi/log",
        });
        swetrix.trackViews();
      });
    </script>

    <noscript>
      <img src="https://swetrixapi.akinci.fyi/log/noscript?pid=1FQBRBM970Ir" alt="" referrerpolicy="no-referrer-when-downgrade" />
    </noscript>
    <Nav />
    <slot />
    <Footer />
  </body>
</html>
