---
import Footer from "../components/Footer.astro";
import "../styles/fonts.css";
import "../styles/global.css";
import "../styles/colors.css";
const { pageTitle } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="me" href="https://mas.to/@ingenieur" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" sizes="32x32" href="/favicon.ico" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css" crossorigin="anonymous" />
    <link rel="alternate" type="application/rss+xml" title="kenan.fyi" href={new URL("rss.xml", Astro.site)} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="posting occasionally" />
    <script src="https://meter.akinci.fyi/api/script.js" data-site-id="1" defer></script>
    <title>{pageTitle}</title>
  </head>
  <body>
    <slot />
    <Footer />
  </body>
</html>
