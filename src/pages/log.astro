---
import Base from "../layouts/Base.astro";
const pageTitle = "log";
---

<Base pageTitle={pageTitle}>
  <h1>{pageTitle}</h1>
  <i>the last 30 commits</i>
  <blockquote>
    <div id="commits"></div>
    <p>
      <a href="https://github.com/kenandotfyi/kenanfyi/commits/master/"
        >the rest</a
      >
    </p>
  </blockquote>

  <script>
    //@ts-nocheck
    async function fetchData() {
      const response = await fetch(
        "https://api.github.com/repos/kenandotfyi/kenanfyi/commits",
      );
      const data = await response.json(); // Parse the response JSON
      return data;
    }

    function formatDate(dateString) {
      const date = new Date(dateString); // Convert the string to a Date object

      // Define options for formatting the date
      const options = {
        year: "numeric",
        day: "2-digit",
        month: "short",
      };

      // Format the date using Intl.DateTimeFormat
      return new Intl.DateTimeFormat("en-UK", options).format(date);
    }

    async function displayDate() {
      try {
        const data = await fetchData();
        for (let r of data) {
          document.getElementById("commits").innerHTML += `

          <li class="commit">
<span class="date">${formatDate(r.commit.committer.date)}</span>
            <span>・</span>
            <span>
<a href="${r.html_url}">${r.sha.substring(0, 6)}</a>
              </a>
            <span>・</span>
<span>${r.commit.message}</span>
            </span>
          </li>`;
        }
        // Assume the date information is in a property called 'date'

        // You can also update your UI here with the formatted date
      } catch (error) {
        console.error("Error fetching or formatting data:", error);
      }
    }

    displayDate(); // Call the function to fetch and format the date

